// Default parameters
params {
    platform        = 'ont'                                   // Options: 'ont', 'pacbio'
    threads         = 8                                      // Adjust based on your CPU cores
    outdir          = '/home/vanda/Documents/GIAB/nanopore'                               // Output directory
    input_reads     = '/home/vanda/Documents/GIAB/nanopore/*.fq.gz'                            // Input reads (glob or file)
    ref             = '/home/vanda/Documents/genome/chm13v2.0.fa'                      // Reference genome
    sq_lines        = '/home/vanda/Documents/genome/sq_lines.txt'                      // SAM header lines for LAST
    truth_vcf       = '/home/vanda/Documents/GIAB/SV_Benchmark_CMRG_GIAB/GRCh38_HG2-T2TQ100-V1.1.vcf.gz'                // GIAB VCF for benchmarking
    truth_bed       = '/home/vanda/Documents/GIAB/SV_Benchmark_CMRG_GIAB/GRCh38_HG2-T2TQ100-V1.1_stvar.benchmark.bed'                       // BED file for benchmarking
    bench_params    = '--passonly --giabreport --includebed /home/vanda/Documents/GIAB/SV_Benchmark_CMRG_GIAB/GRCh38_HG2-T2TQ100-V1.1_stvar.benchmark.bed' // Truvari options
    aligners        = ['bwa', 'minimap2', 'last', 'ngmlr', 'vacmap', 'mmbwa']         // Aligners to use
    sv_callers      = ['sniffles', 'cutesv', 'dysgu', 'delly', 'sawfish']    // SV callers to use
    skip_alignment  = false
}

// Local executor settings
process {
    executor = 'local'
    cpus = 4
    memory = '8 GB'
    time = '2h'
    errorStrategy = 'retry'
    maxRetries = 2
    maxErrors = '-1'
    scratch = true
    withLabel: big_job {
        cpus = 16
        memory = '32 GB'
        time = '72h'
    }
}

// Output handling
process.publishDir = [
    enable: true,
    mode: 'copy'
]

// Containerization disabled for local setup
docker.enabled = false
singularity.enabled = false

// Profiles
profiles {
    local {
        process.executor = 'local'
        docker.enabled = false
        singularity.enabled = false
    }
}


